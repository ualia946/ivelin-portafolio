---
import "../styles/global.css";
import Navbar from "../components/commons/navbar/navbar.astro";
import Footer from "../components/commons/footer/footer.astro";
import { ChatBot } from "../components/commons/chatBot/ChatBot.jsx"
import  GeoTracker  from "../components/tracking/GeoTracker.jsx"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Ivelin Portafolio" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>Ivelin Iliyanov Apostolov</title>
    <script is:inline>
      // Polyfill for WebGPU's GPUShaderStage to prevent three.js WebGPU modules from crashing
      // in browsers where WebGPU isn't available. react-globe.gl uses three under the hood,
      // and some builds may evaluate WebGPU code paths.
      if (typeof window !== 'undefined' && typeof window.GPUShaderStage === 'undefined') {
        window.GPUShaderStage = { VERTEX: 1, FRAGMENT: 2, COMPUTE: 4 };
      }
    </script>
  </head>
  <body class="bg-gray-950 text-white">
    <Navbar />
    <GeoTracker  client:load />
    <slot />
    <ChatBot client:load/>
    <Footer />
  </body>
</html>
